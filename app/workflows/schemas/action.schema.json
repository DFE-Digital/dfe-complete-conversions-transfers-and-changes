{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/schemas/action",
  "title": "Action",
  "description": "A single action which can be taken within a task.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["single-checkbox"],
      "default": "single-checkbox"
    },
    "title": { "type": "string" },
    "hint": { "type": "string" },
    "guidance_summary": { "type": "string" },
    "guidance_text": { "type": "string" }
  },
  "allOf": [
    {
      "if": {
        "properties": { "type": { "const": "single-checkbox" } }
      },
      "then": {
        "$ref": "/schemas/actions/single-checkbox"
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "multi-checkbox" } },
        "required": ["type"]
      },
      "then": {
        "$ref": "/schemas/actions/multi-checkbox"
      }
    }
  ],
  "examples": [
    {
      "title": "Check new URN has been issued",
      "hint": "Check that the URN for the new school has been issued.",
      "guidance_summary": "What to check?",
      "guidance_text": "You can find [a list of what to check online](https://example.com)."
    }
  ],
  "required": ["title"],
  "additionalProperties": false
}
