{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task list",
  "description": "A top-level definition of a task list",
  "type": "object",
  "properties": {
    "sections": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
