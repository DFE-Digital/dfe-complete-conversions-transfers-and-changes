{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/schemas/section",
  "title": "Section",
  "description": "A single section within a task list.",
  "type": "object",
  "properties": {
    "title": { "type": "string" },
    "tasks": {
      "title": "Tasks",
      "description": "A list of tasks within a section.",
      "type": "array",
      "items": {
        "title": "Task",
        "description": "A task on the task list, which contains one or more actions.",
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "hint": { "type": "string" },
          "guidance_summary": { "type": "string" },
          "guidance_text": { "type": "string" },
          "optional": { "type": "boolean" },
          "actions": {
            "title": "Actions",
            "description": "A list of actions which collectively make up a task.",
            "type": "array",
            "items": { "$ref": "/schemas/action" }
          }
        },
        "additionalProperties": false,
        "required": ["title", "actions"]
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "required": ["title"]
}
