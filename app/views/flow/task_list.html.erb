<% content_for :breadcrumbs do %>

<div class="govuk-breadcrumbs">
  <ol class="govuk-breadcrumbs__list">
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to "Home", root_path, class: 'breadcrumbs__link' %>
    </li>
  </ol>
</div>

<% end %>

<h1 class="govuk-heading-l">Prototypical task list: <%= @title %></h1>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <p class="govuk-body">This is the prototypical list of tasks which will be applied to all new projects of the type "<%= @title %>".</p>

    <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

    <% if @description %>

      <h2 class="govuk-heading-m">Description</h2>

      <%= @description.html_safe %>

      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
    <% end %>

    <h2 class="govuk-heading-m">Tasks</h2>

    <ol class="app-task-list">

    <% @sections.each_with_index do |section, index| %>

      <li>
        <h2 class="app-task-list__section">
          <span class="app-task-list__section-number"><%= index+1 %>. </span> <%= section[:title] %>
        </h2>

        <ul class="app-task-list__items">

        <% for task in section[:tasks] %>

          <li class="app-task-list__item">
            <span class="app-task-list__task-name">
              <%= task[:title] %>
            </span>
          </li>

        <% end %>
          
        </ul>
      </li>

    <% end %>

    </ol>

  </div>
</div>
