<% content_for :pre_content_nav do %>
  <% render partial: "shared/back_link", locals: { href: root_path } %>
<% end %>

<%= render partial: "shared/project_summary" %>

<%= render partial: "shared/project_sub_navigation" %>

<h2 class="govuk-heading-l"><%= t("project.show.title") %></h2>

<ol class="app-task-list">
  <li>
    <h3 class="app-task-list__section">
      Clear and sign legal documents
    </h3>
    <ul class="app-task-list__items">
      <li class="app-task-list__item">
        <span class="app-task-list__task-name">
          <%= link_to "Land questionnaire", edit_project_conversion_voluntary_task_list_path(@project, "land_questionnaire") %>
          <%#= link_to "Land questionnaire", task_path("land-questionnaire") %>
        </span>
      </li>
      <li class="app-task-list__item">
        <span class="app-task-list__task-name">
          <%= link_to "Supplemental funding agreement", edit_project_conversion_voluntary_task_list_path(@project, "supplemental_funding_agreement") %>
          <%#= link_to "Supplemental funding agreement", task_path("supplemental-funding-agreement") %>
        </span>
      </li>
    </ul>
  </li>
</ol>

<%= render "projects/show/complete" unless @project.completed? %>
