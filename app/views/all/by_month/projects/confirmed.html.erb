<% content_for :primary_navigation do %>
  <%= render partial: "shared/navigation/all_projects_primary_navigation" %>
<% end %>

<% content_for :page_title do %>
  <%= page_title(t("project.openers.title", date: @date)) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <h1 class="govuk-heading-l">
      <%= t("project.openers.title", date: @date) %>
    </h1>
    <p><%= t("project.openers.subtitle") %></p>

    <nav class="moj-sub-navigation" aria-label="Project index sub-navigation">
      <ul class="moj-sub-navigation__list">
        <%= render partial: "shared/sub_navigation_item",
              locals: {name: t("subnavigation.openers"),
                       path: "/projects/all/by-month/confirmed/#{@month}/#{@year}"} %>
        <%= render partial: "shared/sub_navigation_item",
              locals: {name: t("subnavigation.revised"),
                       path: "/projects/all/by-month/revised/#{@month}/#{@year}"} %>
      </ul>
    </nav>

    <%= render partial: "confirmed_table", locals: {projects: @projects, date: @date} %>
  </div>
</div>
