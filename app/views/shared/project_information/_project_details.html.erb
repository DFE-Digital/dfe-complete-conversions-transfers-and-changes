<div id="projectDetails" class="project-information-block">
  <h3 class="govuk-heading-m"><%= t("project_information.show.project_details.title") %></h3>
  <%= govuk_summary_list(actions: false) do |summary_list|
        summary_list.row do |row|
          row.key { t("project_information.show.project_details.rows.type") }
          row.value { t("project_information.show.project_details.values.#{project.type_locale}") }
        end
        summary_list.row do |row|
          row.key { t("project_information.show.project_details.rows.date.#{project.type_locale}") }
          row.value { significant_date(project) }
        end
        summary_list.row do |row|
          row.key { t("project_information.show.project_details.rows.local_authority") }
          row.value { project.establishment.local_authority_name }
        end
        summary_list.row do |row|
          row.key { t("project_information.show.diocese_details.rows.diocese") }
          row.value { project.establishment.diocese_name }
        end
        summary_list.row do |row|
          row.key { t("project_information.show.project_details.rows.region") }
          row.value { project.establishment.region_name }
        end
      end %>
</div>
