<%= render(TaskList::TaskHeader.new(project: @project, task: @task)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @task, url: conversion_involuntary_update_task_path(@project, @task.class.identifier), method: :put do |form| %>
      <%= form.govuk_error_summary %>

      <%= render(TaskList::CheckBoxAction.new(form: form, task: @task, attribute: :review)) %>

      <%= form.govuk_submit %>
    <% end %>
  </div>
</div>
