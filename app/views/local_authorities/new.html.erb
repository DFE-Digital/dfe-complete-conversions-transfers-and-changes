<% content_for :primary_navigation do %>
  <%= render partial: "shared/navigation/service_support_primary_navigation" %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t("local_authority.new.title") %>
    </h1>

    <%= form_with model: @local_authority, url: local_authorities_path, method: :post do |form| %>
      <%= form.govuk_error_summary %>

      <%= form.govuk_text_field :name, label: {size: "m", text: t("local_authority.new.name")}, width: 20 %>
      <%= form.govuk_text_field :code, label: {size: "m", text: t("local_authority.new.code")}, width: 10 %>
      <%= form.govuk_text_field :address_1, label: {size: "m", text: t("local_authority.new.line_1")}, width: 20 %>
      <%= form.govuk_text_field :address_2, label: {size: "m", text: t("local_authority.new.line_2")}, width: 20 %>
      <%= form.govuk_text_field :address_3, label: {size: "m", text: t("local_authority.new.line_3")}, width: 20 %>
      <%= form.govuk_text_field :address_town, label: {size: "m", text: t("local_authority.new.town")}, width: 20 %>
      <%= form.govuk_text_field :address_county, label: {size: "m", text: t("local_authority.new.county")}, width: 20 %>
      <%= form.govuk_text_field :address_postcode, label: {size: "m", text: t("local_authority.new.postcode")}, width: 20 %>

      <h2 class="govuk-heading-l">
        <%= t("local_authority.new.director_of_child_services.form_title") %>
      </h2>

      <%= form.fields_for :director_of_child_services, Contact::DirectorOfChildServices.new do |dcs| %>
        <%= dcs.govuk_text_field :title, label: {size: "m", text: t("local_authority.new.director_of_child_services.title")}, width: 20 %>
        <%= dcs.govuk_text_field :name, label: {size: "m", text: t("local_authority.new.director_of_child_services.name")}, width: 20 %>
        <%= dcs.govuk_email_field :email, label: {size: "m", text: t("local_authority.new.director_of_child_services.email")}, width: 20 %>
        <%= dcs.govuk_phone_field :phone, label: {size: "m", text: t("local_authority.new.director_of_child_services.phone")}, width: 10 %>
      <% end %>

      <%= form.govuk_submit t("local_authority.new.save_and_return") do %>
        <%= govuk_link_to t("cancel"), local_authorities_path %>
      <% end %>
    <% end %>
  </div>
</div>
