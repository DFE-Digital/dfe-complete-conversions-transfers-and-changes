<% content_for :page_title do %>
  <%= page_title(t("transfer_new_date_history_form.title",
        school_name: @project.establishment.name,
        urn: @project.urn, transfer_date:
                     @project.transfer_date.to_formatted_s(:govuk))) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: project_date_history_path(@project) do |form| %>
      <%= form.govuk_error_summary %>

      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-fieldset__heading">
            <%= t("transfer_new_date_history_form.title",
                  school_name: @project.establishment.name,
                  urn: @project.urn, transfer_date:
              @project.transfer_date.to_formatted_s(:govuk)) %>
          </h1>
        </legend>

        <%= form.govuk_date_field :revised_date,
              omit_day: true,
              legend: {text: t("helpers.legend.transfer_new_date_history_form.revised_date")},
              hint: {text: t("helpers.hint.transfer_new_date_history_form.revised_date")} %>

        <%= form.govuk_text_area :note_body, label: {text: t("helpers.label.transfer_new_date_history_form.note_body"), size: "m"} %>

        <div class="govuk-button-group">
          <%= form.govuk_submit(t("transfer_new_date_history_form.submit")) %>
          <%= govuk_link_to(t("transfer_new_date_history_form.cancel"), project_path(@project)) %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
